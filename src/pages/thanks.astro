---
import Layout from "../Layout.astro";
---

<Layout title="Thanks from">
  <div
    class="py-16 2xl:py-32 flex flex-col md:flex-row gap-16 md:gap-4 lg:gap-8"
  >
    <figure>
      <img
        src="https://gif.land/nice.gif"
        width={500}
        height={375}
        alt="Finn and Jake from Adventure Time fist bumping in a forest"
      />
      <figcaption class="text-sm flex flex-col">
        <a
          class="underline underline-offset-2 hover:text-emerald-700 dark:hover:text-emerald-500"
          target="_blank"
          href="https://gif.land/nice.gif"
        >
          nice.gif
        </a>
      </figcaption>
    </figure>
    <div
      class="-mt-px max-w-lg [&_p]:my-4 [&_p]:text-pretty [&_a]:underline [&_a]:underline-offset-2 [&_a]:hover:text-emerald-700 [&_a]:dark:hover:text-emerald-500"
    >
      <h3 class="text-sm text-neutral-500 leading-none">
        ok, got it
      </h3>
      <h2 class="text-2xl">thanks for your submission</h2>
      <p class="text-pretty">Your gif has been uploaded and will be reviewed. Check back to see it on <a href="/">gif.land</a> soon.</p>
    </div>
  </div>
</Layout>
